<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LuntanActivity"
    android:background="@drawable/bk">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:id="@+id/layout">
        <com.example.app3.CircleImageView
            android:id="@+id/home_imageview"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/touxiang" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fouth_1"
            android:text="家长圈"
            android:textSize="25sp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fouth_1"
            android:id="@+id/fouth_2"
            android:text="分享会"
            android:textSize="25sp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fouth_2"
            android:id="@+id/fouth_3"
            android:text="经验分享"
            android:textSize="25sp"/>
    </RelativeLayout>
</RelativeLayout>