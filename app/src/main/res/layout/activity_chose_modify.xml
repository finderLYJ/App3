<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChoseModifyActivity">

    <RelativeLayout
        android:id="@+id/modify_psd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/item_gridbg">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/modify_psd"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="24sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/modify_nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/item_gridbg">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/modify_name"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改昵称"
            android:textSize="24sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>